                function showEditQuestion() {
            document.getElementById('editQuestionTitle').value =
                `@Html.Raw(Model.Question.Title.Replace("`", "\\`"))`;

            document.getElementById('editQuestionBody').value =
                `@Html.Raw(Model.Question.Body.Replace("`", "\\`"))`;

            const modal = new bootstrap.Modal(
                document.getElementById('editQuestionModal')
            );
            modal.show();
        }
                async function saveQuestionEdit() {
            const title = document.getElementById('editQuestionTitle').value;
            const body = document.getElementById('editQuestionBody').value;
            const id = @Model.Question.Id;

            if (title.length < 10 || body.length < 20) {
                alert('Title or body too short');
                return;
            }

            const res = await fetch(`/api/questions/${id}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': 'Bearer ' + getToken()
                },
                body: JSON.stringify({
                    title,
                    body,
                    tags: "" // ⚠ required if DTO expects tags
                })
            });

            if (res.ok) {
                location.reload();
            } else {
                const data = await res.json();
                alert(data.message || 'Failed to update question');
            }
        }

                async function deleteQuestion(id) {
            if (!confirm('Delete this question?')) return;

            const res = await fetch(`/api/questions/${id}`, {
                method: 'DELETE',
                headers: {
                    'Authorization': 'Bearer ' + getToken()
                }
            });

            if (res.ok) {
                window.location.href = '/Questions';
            } else if (res.status === 403) {
                alert('You are not allowed to delete this question');
            } else {
                alert('Failed to delete question');
            }
        }




    </script>
}
